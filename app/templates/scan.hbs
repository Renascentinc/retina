<div class="search-bar">
	<select class="search-parameter" id="status">
		<option value=""> Status </option>
		{{#each model.status.status as |status|}}
			<option value={{status}}>
				{{status}}
			</option>
		{{/each}}
	</select>
	
	<select class="search-parameter" id="type">
		<option>Type</option>
		{{#each model.types.types as |type|}}
			<option value={{type}}>
				{{type}}
			</option>
		{{/each}}
	</select>
	
	<select class="search-parameter" id="brand">
		<option>Brand</option>
		{{#each model.brands.brands as |brand|}}
			<option value={{brand}}>
				{{brand}}
			</option>
		{{/each}}
	</select>
</div>

<div id="tool-display-box">
{{#each model.tools as |tool|}}
	<div class="specs-box">
		<div class="facts">
			{{tool.attributes.brand}} 
			{{tool.attributes.type}}<br>
			{{tool.id}}<br>
			{{tool.attributes.username}}
		</div>
		
		<div class="options">
			{{#link-to 'info' 222222}}more 
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> 
			{{/link-to}}<br>
            
			
			<button {{action 'addToList' tool.id}}>add to list
				<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			</button>
		</div>
	</div>
{{/each}}
</div>

<div id="menu">
	<div id="cart">
		<div id="list-title">
			Transfer List
		</div>

		<div id="list">
		</div>
	</div>
	<div id="cart-actions">
		<select id="user-to-transfer-to" class="dark-dropdown">
			<option value="">Transfer to</option>
			{{#each model.users.users as |owner|}}
				<option value={{owner.userid}}>
					{{owner.username}}
				</option>
			{{/each}}
		</select>
		
		<button {{action "transferTools"}} class="go" id="transfer-button">transfer</button>
	</div>
</div>


{{outlet}}
