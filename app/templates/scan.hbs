<div class="search-bar">

	<select name="status" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
		<option disabled selected hidden> Status </option>
		<option value=""> Any Status </option>
		{{#each model.status.status as |status|}}
			<option value={{status}}>
				{{status}}
			</option>
		{{/each}}
	</select>

	<select name="type" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
		<option disabled selected hidden>Type</option>
		<option value=""> Any Type </option>
		{{#each model.types.types as |type|}}
			<option value={{type}}>
				{{type}}
			</option>
		{{/each}}
	</select>

	<select name="owner" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
		<option disabled selected hidden>Owner</option>
		<option value=""> Any Owner </option>
		{{#each model.selectUsers.users as |user|}}
			<option value={{user.userid}}>
				{{user.username}}
			</option>
		{{/each}}
	</select>

		<select name="brand" class="search-parameter search" id="brand" onchange={{action "updateSearch" value="target"}}>
		<option disabled selected hidden>Brand</option>
		<option value=""> Any Band </option>
		{{#each model.brands.brands as |brand|}}
			<option value={{brand}}>
				{{brand}}
			</option>
		{{/each}}
	</select>
</div>

<div id="tool-display-box">
	<div class="search-block">
		{{input class="search-box" placeholder="ToolID or Serial Number" key-up="fuzzySearch" }}
	</div>

{{#each model.tools.data as |tool|}}
	<div class="specs-box">
		<button class="tool-specs" {{action 'addToList' tool.id}}>
			<div class="title">
					{{tool.attributes.brand}}
					{{tool.attributes.type}}<br>
			</div>

			<div class="facts">

				Tool ID: {{tool.id}}<br>
				<span class="fa fa-user"></span> {{tool.attributes.username}}
			</div>
		</button>

		<div class="options">
			{{#link-to 'info' tool.id}}
				<span class="fa fa-info-circle search-icon" aria-hidden="true" ></span>
			{{/link-to}}
			<br>
		</div>
		</div>

{{/each}}

</div>

<div id="menu">
	<div id="cart">
		<div id="list-title">
      <div id="trash-icon">
			  <button class='fa fa-trash delete-icon' aria-hidden='true' {{action 'deleteToolList'}}></button>
      </div>
      <div id="cart-title">
        Cart
      </div>
		</div>

		<hr style="margin: 0;">

		<div id="list">
			{{#each toolList key="@index" as |tool|}}
				{{tool}}<br>
			{{/each}}
		</div>
	</div>
	<div id="cart-actions">
		<select id="user-to-transfer-to" class="dark-dropdown">--}}
			<option disabled selected hidden>Transfer to</option>
			{{#each model.allUsers.users as |user|}}
				<option value={{user.userid}}>
					{{user.username}}
				</option>
			{{/each}}
		</select>

		<button {{action "transferTools"}} class="go" id="transfer-button">Transfer</button>
	</div>
</div>


{{outlet}}
