<div class="search-bar">
    <select name="status" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
        <option value=""> Status</option>
        {{#each model.dropdown.status as |status|}}
            <option value={{status}} selected={{eq status _status}}>
                {{status}}
            </option>
        {{/each}}
    </select>

    <select name="type" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
        <option value=""> Type</option>
        {{#each model.dropdown.type as |type|}}
            <option value={{type}} selected={{eq type _type}}>
                {{type}}
            </option>
        {{/each}}
    </select>

    <select name="owner" class="search-parameter search" onchange={{action "updateSearch" value="target"}}>
        <option value=""> Owner</option>
        {{#each model.selectUsers.users as |user|}}
            <option value={{user.userid}} selected={{eq user.userid _userID}}>
                {{user.username}}
            </option>
        {{/each}}
    </select>

    <select name="brand" class="search-parameter search" id="brand" onchange={{action "updateSearch" value="target"}}>
        <option value=""> Brand</option>
        {{#each model.dropdown.brand as |brand|}}
            <option value={{brand}} selected={{eq brand _brand}}>
                {{brand}}
            </option>
        {{/each}}
    </select>
</div>


<div id="tool-display-box">
    <div class="search-block">
        {{input class="search-box" placeholder="ToolID or Serial Number" key-up="fuzzySearch" }}
    </div>

    {{#each model.tools.data as |tool|}}
        <div class="specs-box">
            <button class="tool-specs" {{action "addToList" tool.id}}>
                <div class="title">
                    {{tool.attributes.brand}}
                    {{tool.attributes.type}}<br>
                </div>

                <div class="facts">

                    Tool ID: {{tool.id}}<br>
                    <span class="fa fa-user"></span> {{tool.attributes.username}}, {{tool.attributes.status}}
                </div>
            </button>

            <div class="options">
                {{#link-to "info" tool.id}}
                    <span class="fa fa-info-circle search-icon" aria-hidden="true"></span>
                {{/link-to}}
                <br>
            </div>
        </div>
    {{/each}}
</div>

<div id="cart-menu">
    <div id="cart">
        <div id="list-title">
            <div id="trash-icon">
                <button class="fa fa-trash delete-icon" aria-hidden="true" {{action "deleteToolList"}}></button>
            </div>
            <div id="cart-title">
                Cart
            </div>
        </div>

        <hr style="margin: 0;">

        <div id="list">
            {{#each toolList key="@index" as |tool|}}
                {{tool}}<br>
            {{/each}}
        </div>
    </div>
    <div id="cart-actions">
        <select id="user-to-transfer-to" class="dark-dropdown" onchange={{action "updateTransferTo" value="target"}}>
            <option value="">Transfer to</option>
            {{#each model.dropdown.user as |user|}}
                <option value={{user.userid}} selected={{eq user.userid _transferTo}}>
                    {{user.username}}
                </option>
            {{/each}}
        </select>

        <button {{action "transferTools"}} class="go" id="transfer-button">
            Transfer
        </button>
    </div>
</div>