

<div class="search-bar">
	<select class="search-parameter" id="status">
		<option value=""> Status </option>
		{{#each model.status.status as |status|}}
			<option value={{status}}>
				{{status}}
			</option>
		{{/each}}
	</select>
	
	<select class="search-parameter" id="type">
		<option>Type</option>
		{{#each model.types.types as |type|}}
			<option value={{type}}>
				{{type}}
			</option>
		{{/each}}
	</select>
	
	<select class="search-parameter" id="brand">
		<option>Brand</option>
		{{#each model.brands.brands as |brand|}}
			<option value={{brand}}>
				{{brand}}
			</option>
		{{/each}}
	</select>
</div>

<div id="tool-display-box">
	<div class="search-block">
		<input class="search-box" placeholder="ToolID or Serial Number">
	</div>
{{#each model.tools.data as |tool|}}
	<div class="specs-box"> 
		<div class="tool-specs" {{action 'addToList' tool.id}}>
			<div class="title"> 
					{{tool.attributes.brand}} 
					{{tool.attributes.type}}<br>
			</div>
			
			<div class="facts">

				Tool ID: {{tool.id}}<br>
				Owner: {{tool.attributes.username}}
			</div>
		</div>
		
		<div class="options">
			
				<span class="glyphicon glyphicon-info-sign search-icon" aria-hidden="true" ></span> 
			<br>
		</div>
		</div> 
	
{{/each}}
</div>

<div id="menu">
	<div id="cart">
		<div id="list-title">
			<span class='glyphicon glyphicon-remove-sign delete-icon' aria-hidden='true' {{action 'deleteToolList'}}></span> Transfer List
		</div>
		
		<hr style="margin: 0;">

		<div id="list">
		</div>
	</div>
	<div id="cart-actions">
		<select id="user-to-transfer-to" class="dark-dropdown">
			<option value="">transfer to:</option>
			{{#each model.users.users as |user|}}
				<option value={{user.userid}}>
					{{user.username}}
				</option>
			{{/each}}
		</select>
		
		<button {{action "transferTools"}} class="go" id="transfer-button">transfer</button>
	</div>
</div>


{{outlet}}
