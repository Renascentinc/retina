<?xml version='1.0' encoding='utf-8'?>
<widget id="com.retinaenterprise.renascentinc" version="3.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RETINA</name>
    <description>
        Renascent inc. Asset Tracking Application
    </description>
    <author email="dev@renascentinc.com" href="http://renascentinc.com">
        Renascent inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="blob:*" />
    <allow-intent href="about:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="phonegap-nfc" spec="^1.0.3">
        <variable name="NFC_USAGE_DESCRIPTION" value="Read NFC Tags" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <platform name="android">
        <icon density="ldpi" src="src/assets/icons/android/white_36x36.png" />
        <icon density="mdpi" src="src/assets/icons/android/white_48x48.png" />
        <icon density="hdpi" src="src/assets/icons/android/white_72x72.png" />
        <icon density="xhdpi" src="src/assets/icons/android/white_96x96.png" />
        <icon density="xxhdpi" src="src/assets/icons/android/white_144x144.png" />
        <icon density="xxxhdpi" src="src/assets/icons/android/white_192x192.png" />
    </platform>
    <platform name="ios">
        <icon height="20" src="src/assets/icons/ios/white_20x20.png" width="20" />
        <icon height="29" src="src/assets/icons/ios/white_29x29.png" width="29" />
        <icon height="40" src="src/assets/icons/ios/white_40x40.png" width="40" />
        <icon height="58" src="src/assets/icons/ios/white_58x58.png" width="58" />
        <icon height="60" src="src/assets/icons/ios/white_60x60.png" width="60" />
        <icon height="72" src="src/assets/icons/ios/white_72x72.png" width="72" />
        <icon height="76" src="src/assets/icons/ios/white_76x76.png" width="76" />
        <icon height="80" src="src/assets/icons/ios/white_80x80.png" width="80" />
        <icon height="87" src="src/assets/icons/ios/white_87x87.png" width="87" />
        <icon height="144" src="src/assets/icons/ios/white_144x144.png" width="144" />
        <icon height="167" src="src/assets/icons/ios/white_167x167.png" width="167" />
        <icon height="180" src="src/assets/icons/ios/white_180x180.png" width="180" />
        <icon src="src/assets/icons/ios/white_512x512.png" />
    </platform>
    <platform name="android">
        <splash density="port-hdpi" src="src/assets/splashscreens/android/red_splash_200x320.png" />
        <splash density="port-ldpi" src="src/assets/splashscreens/android/red_splash_320x480.png" />
        <splash density="port-mdpi" src="src/assets/splashscreens/android/red_splash_480x800.png" />
        <splash density="port-xhdpi" src="src/assets/splashscreens/android/red_splash_720x1280.png" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-printer" spec="^0.7.3" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.0.0" />
</widget>
