<?xml version='1.0' encoding='utf-8'?>
<widget id="com.retina.renascentinc" version="3.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RETINA</name>
    <description>
        Renascent inc. Asset Tracking Application
    </description>
    <author email="dev@renascentinc.com" href="http://renascentinc.com">
        Renascent inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="phonegap-nfc" spec="^1.0.3">
        <variable name="NFC_USAGE_DESCRIPTION" value="Read NFC Tags" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <platform name="android">
        <icon density="ldpi" src="src/assets/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="src/assets/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="src/assets/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="src/assets/icons/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="180" src="src/assets/icons/ios/retina_180x180.png" width="180" />
    </platform>
    <platform name="android">
        <splash density="land-hdpi" src="src/assets/splashscreens/android/screen-hdpi-landscape.png" />
        <splash density="land-ldpi" src="src/assets/splashscreens/android/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" src="src/assets/splashscreens/android/screen-mdpi-landscape.png" />
        <splash density="land-xhdpi" src="src/assets/splashscreens/android/screen-xhdpi-landscape.png" />
        <splash density="port-hdpi" src="src/assets/splashscreens/android/screen-hdpi-portrait.png" />
        <splash density="port-ldpi" src="src/assets/splashscreens/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="src/assets/splashscreens/android/screen-mdpi-portrait.png" />
        <splash density="port-xhdpi" src="src/assets/splashscreens/android/screen-xhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <splash height="480" src="src/assets/splashscreens/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="src/assets/splashscreens/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1024" src="src/assets/splashscreens/ios/screen-ipad-portrait.png" width="768" />
        <splash height="2048" src="src/assets/splashscreens/ios/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="768" src="src/assets/splashscreens/ios/screen-ipad-landscape.png" width="1024" />
        <splash height="1536" src="src/assets/splashscreens/ios/screen-ipad-landscape-2x.png" width="2048" />
        <splash height="1136" src="src/assets/splashscreens/ios/screen-iphone-568h-2x.png" width="640" />
        <splash height="1334" src="src/assets/splashscreens/ios/screen-iphone-portrait-667h.png" width="750" />
        <splash height="2208" src="src/assets/splashscreens/ios/screen-iphone-portrait-736h.png" width="1242" />
        <splash height="1242" src="src/assets/splashscreens/ios/screen-iphone-landscape-736h.png" width="2208" />
    </platform>
    <preference name="SplashScreenDelay" value="2000" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.0.0" />
</widget>
