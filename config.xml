<?xml version='1.0' encoding='utf-8'?>
<widget id="com.retinaenterprise.renascentinc" version="3.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RETINA</name>
    <description>
        Renascent inc. Asset Tracking Application
    </description>
    <author email="retinasupport@renascentinc.com" href="http://renascentinc.com">
        Renascent inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="deployment-target" value="7.0" />
    <preference name="target-device" value="universal" />
    <preference name="BackgroundColor" value="0xff231F20" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#231F20" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <platform name="ios">
        <preference name="SuppressesIncrementalRendering" value="true" />
        <preference name="BackupWebStorage" value="local" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="/public/static/icon-android.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-printer" spec="^0.7.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="phonegap-nfc" spec="^1.0.3">
        <variable name="NFC_USAGE_DESCRIPTION" value="Read NFC Tags" />
    </plugin>
    <engine name="ios" spec="^5.0.0" />
    <engine name="android" spec="^8.0.0" />
</widget>
