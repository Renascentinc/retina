<?xml version='1.0' encoding='utf-8'?>
<widget id="com.retinaenterprise.renascentinc" version="3.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NfcPlugin">
        <param name="android-package" value="com.chariotsolutions.nfc.plugin.NfcPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Printer">
        <param name="android-package" value="de.appplant.cordova.plugin.printer.Printer" />
    </feature>
    <name>RETINA</name>
    <description>
        Renascent inc. Asset Tracking Application
    </description>
    <author email="retinasupport@renascentinc.com" href="http://renascentinc.com">
        Renascent inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="blob:*" />
    <allow-intent href="about:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="src/assets/icons/android/white_36x36.png" />
    <icon density="mdpi" src="src/assets/icons/android/white_48x48.png" />
    <icon density="hdpi" src="src/assets/icons/android/white_72x72.png" />
    <icon density="xhdpi" src="src/assets/icons/android/white_96x96.png" />
    <icon density="xxhdpi" src="src/assets/icons/android/white_144x144.png" />
    <icon density="xxxhdpi" src="src/assets/icons/android/white_192x192.png" />
    <splash density="port-hdpi" src="src/assets/splashscreens/android/red_splash_200x320.png" />
    <splash density="port-ldpi" src="src/assets/splashscreens/android/red_splash_320x480.png" />
    <splash density="port-mdpi" src="src/assets/splashscreens/android/red_splash_480x800.png" />
    <splash density="port-xhdpi" src="src/assets/splashscreens/android/red_splash_720x1280.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
</widget>
